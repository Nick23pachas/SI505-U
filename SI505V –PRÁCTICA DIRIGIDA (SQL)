--> 1
SELECT  FIRST_NAME, SALARY, HIRE_DATE, DEPARTMENT_NAME, JOB_TITLE
FROM EMPLOYEES E, DEPARTMENTS D, jobs F
WHERE ((E.DEPARTMENT_ID=D.DEPARTMENT_ID) AND (E.salary>1500) AND (E.salary<=4500));

--> 2
SELECT E.EMPLOYEE_ID, E.FIRST_NAME, F.COUNTRY_NAME
FROM EMPLOYEES E, DEPARTMENTS D, countries F , JOBS G , LOCATIONS H   WHERE (E.DEPARTMENT_ID=D.DEPARTMENT_ID) AND(D.LOCATION_ID=H.LOCATION_ID)  AND ( H.COUNTRY_ID=F.COUNTRY_ID)AND (E.JOB_ID=G.job_id)
AND (G.job_title=INITCAP('ACCOUNTANT'))

--> 3
SELECT E.employee_id, E.first_name, E.department_id, E.hire_date, E.phone_number, E.job_id, E.salary, E.manager_id, E.department_id
FROM EMPLOYEES E, DEPARTMENTS D, LOCATIONS F, COUNTRIES G
WHERE (E.DEPARTMENT_ID=D.DEPARTMENT_ID) 
AND D.LOCATION_ID=F.LOCATION_ID 
AND F.COUNTRY_ID=G.COUNTRY_ID
AND (F.CITY=INITCAP('MEXICO CITY')) OR (G.COUNTRY_NAME=INITCAP('UNITED STATES OF AMERICA'));

--> 4
SELECT E.employee_id, E.first_name, E.department_id, E.hire_date, E.phone_number, E.job_id, E.salary, E.manager_id, E.department_id
FROM EMPLOYEES E, DEPARTMENTS D, LOCATIONS F, COUNTRIES G
WHERE E.DEPARTMENT_ID=D.DEPARTMENT_ID
AND D.LOCATION_ID=F.LOCATION_ID
AND F.COUNTRY_ID=G.COUNTRY_ID
AND (D.DEPARTMENT_NAME)=INITCAP('SALES')
AND (G.COUNTRY_NAME)=INITCAP('UNITED KINGDOM');

--> 5
SELECT E.FIRST_NAME, E.LAST_NAME 
FROM REGIONS R, COUNTRIES C,LOCATIONS L,DEPARTMENTS D,EMPLOYEES E, JOBS J 
WHERE (R.REGION_ID = C.REGION_ID)
AND (C.COUNTRY_ID = L.COUNTRY_ID)
AND (L.LOCATION_ID = D.LOCATION_ID)
AND (D.DEPARTMENT_ID = E.DEPARTMENT_ID)
AND (E.JOB_ID = J.JOB_ID)
AND (R.REGION_NAME) = INITCAP('AMERICAS')
AND (J.MIN_SALARY+J.MAX_SALARY)/2>E.SALARY;


